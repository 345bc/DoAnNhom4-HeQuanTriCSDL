@model IEnumerable<ESHOPPER.Models.KhachHang>
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<div class="container-fluid py-4 px-2 px-lg-4">
    <!-- Header hiện đại -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fas fa-users text-primary me-3"></i>Khách hàng
            </h2>
            <p class="text-muted fs-6 mb-0">
                Tổng cộng <strong class="text-primary">@Model.Count()</strong> khách hàng được quản lý
            </p>
        </div>
    </div>

    <!-- Card chính -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr class="bg-primary bg-opacity-5 text-dark fw-semibold small text-uppercase">
                            <th class="ps-4 py-4">Khách hàng</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Ngày đăng ký</th>
                            <th>Tài khoản</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white">
                        @foreach (var item in Model)
                        {
                            var initials = item.TenKH?.Split(' ').Where(x => x.Length > 0).Select(x => x[0]).Take(2).Select(c => char.ToUpper(c));
                            var avatarText = initials != null ? string.Concat(initials) : "?";

                            <tr class="align-middle border-bottom" style="transition: all 0.25s ease;">
                                <!-- Tên + Avatar -->
                                <td class="ps-4 py-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar bg-primary bg-gradient text-white fw-bold rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 44px; height: 44px; font-size: 0.95rem;">
                                            @avatarText
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.TenKH</div>
                                            <small class="text-muted">ID: #@item.MaKH</small>
                                        </div>
                                    </div>
                                </td>

                                <!-- Email -->
                                <td class="text-muted fw-medium">@item.Email</td>

                                <!-- SĐT -->
                                <td class="fw-medium">@item.SoDT</td>

                                <!-- Ngày sinh -->
                                <td>
                                    @(item.BirthDayKH.HasValue
                                        ? item.BirthDayKH.Value.ToString("dd/MM/yyyy")
                                        : "<span class='text-muted'>Chưa có</span>")
                                </td>

                                <!-- Giới tính -->
                                <td>
                                    @if (item.GioiTinhKH == "Nam" || item.GioiTinhKH == "Male" || item.GioiTinhKH == "True")
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                            <i class="fas fa-mars me-1"></i> Nam
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-pink bg-opacity-10 text-pink px-3 py-2 rounded-pill">
                                            <i class="fas fa-venus me-1"></i> Nữ
                                        </span>
                                    }
                                </td>

                                <!-- Ngày đăng ký -->
                                <td class="fw-medium text-success">
                                    @(item.NgayDangKy.HasValue ? item.NgayDangKy.Value.ToString("dd/MM/yyyy") : "—")
                                </td>

                                <!-- Tài khoản liên kết -->
                                <td>
                                    <span class="badge bg-dark bg-opacity-10 text-dark px-3 py-2 rounded-pill">
                                        @(item.User?.Name ?? "Chưa liên kết")
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Trạng thái rỗng -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users-slash text-muted mb-3" style="font-size: 4rem; opacity: 0.4;"></i>
                    <h5 class="text-muted">Chưa có khách hàng nào</h5>
                    <p class="text-muted">Hãy bắt đầu bằng việc thêm khách hàng đầu tiên</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary rounded-pill px-4">
                        <i class="fas fa-plus me-2"></i>Thêm khách hàng
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- CSS tinh chỉnh hiện đại -->
<style>
    :root {
        --primary: #4361ee;
        --pink: #e91e63;
    }

    .card {
        border-radius: 1.5rem !important;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08) !important;
    }

    .table tr:hover {
        background-color: #f8faff !important;
        transform: translateY(-1px);
    }

    .avatar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-pink {
        background-color: #fce4ec !important;
        color: #c2185b !important;
    }

    .btn-sm {
        padding: 0.4rem 0.7rem;
    }

    .rounded-pill {
        border-radius: 50rem !important;
    }
</style>