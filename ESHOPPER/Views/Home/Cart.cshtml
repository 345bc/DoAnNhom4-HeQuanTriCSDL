@* 1. KHAI BÁO MODEL: Phải là một danh sách (List/IEnumerable) *@
@model IEnumerable<ESHOPPER.Models.CartViewModel>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Shopping Cart</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="@Url.Action("index","home")">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Shopping Cart</p>
        </div>
    </div>
</div>
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">

                    @* 2. VÒNG LẶP FOREACH: Lặp qua Model chính *@
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle text-left">
                                    <img src="@Url.Content("~/Images/Products/" + item.AnhSP)" alt="" style="width: 50px;">
                                    @* Lấy tên SP, Size, Màu từ item *@
                                    @item.TenSP (@item.MaSize / @item.MaMau)
                                </td>
                                <td class="align-middle">@item.Gia.ToString("N0") ₫</td>
                                <td class="align-middle">

                                    @* 3. FORM CẬP NHẬT SỐ LƯỢNG *@
                                    @using (Html.BeginForm("UpdateCart", "Home", FormMethod.Post))
                                    {
                                        @* Gửi ID (MaBienThe) đi ngầm *@
                                        <input type="hidden" name="id" value="@item.MaBienThe" />

                                        <div class="input-group quantity mx-auto" style="width: 120px;">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-sm btn-primary btn-minus">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                            </div>

                                            @* LẤY SỐ LƯỢNG TỪ ITEM *@
                                            <input type="text" name="quantity" class="form-control form-control-sm bg-secondary text-center" value="@item.SoLuong">

                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-sm btn-primary btn-plus">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        @* Nút submit ẩn để cập nhật *@
                                        <button type="submit" class="btn btn-sm btn-link p-0" style="font-size: 0.8rem;">Cập nhật</button>
                                    }
                                </td>
                                @* Lấy Thành Tiền từ item *@
                                <td class="align-middle">@item.ThanhTien.ToString("N0") ₫</td>
                                <td class="align-middle">
                                    @* 4. LINK XÓA *@
                                    <a href="@Url.Action("RemoveFromCart", "Home", new { id = item.MaBienThe })"
                                       class="btn btn-sm btn-primary"
                                       onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        @* Hiển thị nếu giỏ hàng rỗng *@
                        <tr>
                            <td colspan="5">Giỏ hàng của bạn đang trống.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            @* 5. CART SUMMARY ĐỘNG: Lấy dữ liệu từ ViewBag *@
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">@(ViewBag.Subtotal?.ToString("N0") ?? "0") ₫</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">@ViewBag.Shipping.ToString("N0") ₫</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">@ViewBag.Total.ToString("N0") ₫</h5>
                    </div>
                    <button class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Nút CỘNG
            $('.btn-plus').on('click', function (e) {
                e.preventDefault();
                var $input = $(this).closest('.quantity').find('input');
                var currentValue = parseInt($input.val());
                $input.val(currentValue + 1);
            });

            // Nút TRỪ
            $('.btn-minus').on('click', function (e) {
                e.preventDefault();
                var $input = $(this).closest('.quantity').find('input');
                var currentValue = parseInt($input.val());
                if (currentValue > 1) {
                    $input.val(currentValue - 1);
                }
            });
        });
    </script>
}