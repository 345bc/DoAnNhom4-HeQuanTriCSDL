    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const token = localStorage.getItem("jwtToken");
            const dropdown = document.getElementById("userDropdown");

            if (token) {
                try {
                    const payload = JSON.parse(atob(token.split('.')[1]));
                    const userName = payload.UserName || payload.name || payload.email || "User";
                    const firstLetter = userName.charAt(0).toUpperCase();

                    dropdown.innerHTML = `
                            <div class="dropdown">
                                <div class="user-pill">
                                    <div class="user-avatar-circle">${firstLetter}</div>
                                    <span class="font-weight-bold small text-dark">${userName}</span>
                                    <i class="bi bi-chevron-down small text-muted ml-1"></i>
                                </div>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-custom">
                                    <div class="px-3 py-2 border-bottom mb-2">
                                        <small class="text-muted">Signed in as</small><br>
                                        <strong>${userName}</strong>
                                    </div>
                                    <a href="/Infomation" class="dropdown-item dropdown-item-custom">
                                        <i class="bi bi-person mr-2"></i> Hồ sơ cá nhân
                                    </a>
                                    <a href="/Order/History" class="dropdown-item dropdown-item-custom">
                                        <i class="bi bi-receipt mr-2"></i> Đơn mua
                                    </a>
                                    <div class="dropdown-divider my-2"></div>
                                    <button id="logoutBtn" class="dropdown-item dropdown-item-custom text-danger">
                                        <i class="bi bi-box-arrow-right mr-2"></i> Đăng xuất
                                    </button>
                                </div>
                            </div>
                        `;
                } catch (err) {
                    console.error("JWT decode error:", err);
                    localStorage.removeItem("jwtToken");
                }
            } else {
                dropdown.innerHTML = `
                        <div class="d-flex align-items-center gap-2">
                            <a class="btn-auth btn-login mr-2" href="/Auth/Login">Log In</a>
                            <a class="btn-auth btn-register" href="/Auth/Register">Register</a>
                        </div>
                    `;
            }

            if (dropdown) {
                dropdown.addEventListener("click", (e) => {
                    if (e.target.id === "logoutBtn" || e.target.closest('#logoutBtn')) {
                        localStorage.removeItem("jwtToken");
                        window.location.href = "/";
                    }
                });
            }
        });
    </script>
