@model QlyDonHang_DoAn_hqtcsdl.Models.OrderDetailViewModel

<div class="modal-header border-secondary">
    <h5 class="modal-title text-white">MÃ ĐƠN: <span class="text-info">@Model.OrderNo</span></h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body text-white">
    <div class="row mb-3">
        <div class="col-6">
            <h6 class="text-secondary small">KHÁCH HÀNG</h6>
            <div class="fw-bold">@Model.CustomerName</div>
            <div class="small text-secondary">SĐT: @Model.ShippingPhone</div>
        </div>
        <div class="col-6">
            <h6 class="text-secondary small">ĐỊA CHỈ GIAO</h6>
            <div class="small">@Model.ShippingAddress</div>
        </div>
    </div>
    <div class="bg-dark p-3 rounded border border-secondary">
        @foreach (var item in Model.Items)
        {
            <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom border-secondary border-opacity-25">
                <div>
                    <div class="fw-bold">@item.ProductName</div>
                    <div class="small text-secondary">Size: @item.SizeName | Màu: @item.ColorName | x @item.Quantity</div>
                </div>
                <div class="text-info">@item.TotalPrice.ToString("N0") đ</div>
            </div>
        }
        <div class="d-flex justify-content-between pt-2 mt-2 fw-bold border-top border-secondary">
            <span>TỔNG CỘNG</span>
            <span class="text-warning fs-5">@Model.TotalAmount.ToString("N0") đ</span>
        </div>
    </div>
</div>