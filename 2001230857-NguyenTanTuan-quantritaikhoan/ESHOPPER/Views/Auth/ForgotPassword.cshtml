@{
    Layout = null; // Trang này đứng độc lập, không dùng Layout chung
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu | Fashion Shop</title>

    <!-- Nhúng Bootstrap 4/5 & FontAwesome (Sử dụng CDN cho tiện lợi) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            /* Hình nền gradient đẹp mắt */
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .forgot-card {
            width: 100%;
            max-width: 450px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            overflow: hidden;
            animation: fadeIn 0.5s ease-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .card-header-custom {
            background-color: #fff;
            padding: 40px 30px 20px;
            text-align: center;
            border-bottom: none;
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background: #f3f4f6;
            color: #764ba2;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin: 0 auto 20px;
            box-shadow: inset 0 0 10px rgba(0,0,0,0.05);
        }

        .card-body-custom {
            padding: 10px 40px 40px;
        }

        .form-control-lg {
            font-size: 16px;
            padding: 25px 20px;
            border-radius: 10px;
            background-color: #f8f9fa;
            border: 2px solid transparent;
        }

        .form-control-lg:focus {
            background-color: #fff;
            border-color: #764ba2;
            box-shadow: none;
        }

        .btn-custom {
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            color: white;
            padding: 12px;
            font-weight: 600;
            border-radius: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(118, 75, 162, 0.4);
            color: white;
        }

        .password-display-box {
            background-color: #e8f5e9;
            border: 2px dashed #4caf50;
            color: #2e7d32;
            padding: 15px;
            border-radius: 8px;
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 3px;
            text-align: center;
            margin: 20px 0;
            position: relative;
        }

        .copy-hint {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="forgot-card">
        <!-- Header: Icon & Tiêu đề -->
        <div class="card-header-custom">
            <div class="icon-wrapper">
                <i class="fas fa-lock-open"></i>
            </div>
            <h3 class="font-weight-bold text-dark mb-2">Quên Mật Khẩu?</h3>
            <p class="text-muted small">
                @(ViewBag.Success != null ? "Mật khẩu của bạn đã được khôi phục!" : "Nhập email đã đăng ký để hệ thống cấp lại mật khẩu mới.")
            </p>
        </div>

        <div class="card-body-custom">
            <!-- 1. TRƯỜNG HỢP LỖI -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center shadow-sm border-0 fade show" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i> @ViewBag.Error
                </div>
            }

            <!-- 2. TRƯỜNG HỢP THÀNH CÔNG -->
            @if (ViewBag.Success != null)
            {
                <div class="text-center">
                    <div class="password-display-box" onclick="copyToClipboard(this)">
                        @ViewBag.Success.Replace("Thành công! Mật khẩu mới là: ", "")
                    </div>
                    <span class="copy-hint"><i class="far fa-copy"></i> Click vào mật khẩu để copy</span>

                    <p class="text-muted mt-4 mb-4 small">
                        Vui lòng sử dụng mật khẩu trên để đăng nhập. Sau khi đăng nhập thành công, hãy đổi mật khẩu ngay để bảo mật.
                    </p>

                    <a href="@Url.Action("Login", "Auth")" class="btn btn-custom btn-block">
                        <i class="fas fa-sign-in-alt mr-2"></i> Quay lại Đăng Nhập
                    </a>
                </div>
            }
            else
            {
                <!-- 3. TRƯỜNG HỢP NHẬP FORM (Mặc định) -->
                using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
                {
                    <div class="form-group mb-4">
                        <div class="input-group">
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Nhập địa chỉ Email..." required autofocus>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-custom btn-block">
                        Gửi Yêu Cầu
                    </button>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Auth")" class="text-secondary font-weight-bold small text-decoration-none">
                            <i class="fas fa-arrow-left mr-1"></i> Quay lại Đăng Nhập
                        </a>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Script nhỏ để copy mật khẩu cho tiện -->
    <script>
        function copyToClipboard(element) {
            var text = element.innerText.trim();
            var elem = document.createElement("textarea");
            document.body.appendChild(elem);
            elem.value = text;
            elem.select();
            document.execCommand("copy");
            document.body.removeChild(elem);

            // Hiệu ứng visual
            var originalBg = element.style.backgroundColor;
            element.style.backgroundColor = "#c8e6c9";
            element.style.borderColor = "#2e7d32";
            setTimeout(function() {
                element.style.backgroundColor = originalBg;
            }, 300);

            alert("Đã copy mật khẩu: " + text);
        }
    </script>

</body>
</html>