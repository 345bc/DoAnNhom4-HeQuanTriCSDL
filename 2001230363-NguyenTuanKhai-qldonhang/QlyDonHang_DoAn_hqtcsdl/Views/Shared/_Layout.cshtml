<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hệ Thống Quản Lý</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link href="~/Content/Cyberpunk.css" rel="stylesheet" />
    <style>
        /* Active Link Highlight */
        .active-cyber {
            background: linear-gradient(90deg, rgba(0,255,255,0.1) 0%, rgba(0,0,0,0) 100%);
            border-left: 3px solid #0dcaf0 !important;
            color: #0dcaf0 !important;
        }
        /* Spacing for fixed navbar */
        .main-content {
            margin-top: 80px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark cyber-navbar fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand ps-3" href="@Url.Action("Index", "Home")">
                FASHION<span class="text-neon-blue">MANAGER</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item me-3">
                        <span class="text-secondary">Admin</span>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="btn btn-sm btn-outline-danger"><i class="fas fa-power-off"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid main-content">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 d-none d-md-block bg-transparent border-end border-secondary vh-100 pt-3 position-fixed" style="z-index: 100; top: 60px;">
                <div class="list-group list-group-flush bg-transparent">

                    <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action bg-transparent text-white border-0 py-3 @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active-cyber" : "")">
                        <i class="fas fa-chart-line me-3 text-info"></i> Tổng Quan
                    </a>

                    <a href="@Url.Action("Index", "Order")" class="list-group-item list-group-item-action bg-transparent text-white border-0 py-3 @(ViewContext.RouteData.Values["controller"].ToString() == "Order" ? "active-cyber" : "")">
                        <i class="fas fa-box me-3 text-warning"></i> Quản Lý Đơn
                    </a>

                    <a href="@Url.Action("Index", "Product")" class="list-group-item list-group-item-action bg-transparent text-white border-0 py-3 @(ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active-cyber" : "")">
                        <i class="fas fa-tshirt me-3 text-danger"></i> Sản Phẩm
                    </a>

                    <a href="@Url.Action("Index", "Customer")" class="list-group-item list-group-item-action bg-transparent text-white border-0 py-3 @(ViewContext.RouteData.Values["controller"].ToString() == "Customer" ? "active-cyber" : "")">
                        <i class="fas fa-users me-3 text-success"></i> Khách Hàng
                    </a>

                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-10 offset-md-2 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>